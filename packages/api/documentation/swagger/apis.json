{
  "/apis/active": {
    "get": {
      "summary": "Get all Web3APIs",
      "description": "Retrieve all active APIs",
      "produces": ["application/json"],
      "responses": {
        "200": {
          "description": "List of active APIs",
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "status": {
                    "type": "integer"
                  },
                  "apis": {
                    "type": "array",
                    "items": {
                      "$ref": "#/definitions/Api"
                    }
                  }
                },
                "example": {
                  "status": 200,
                  "apis": [
                    {
                      "id": "3",
                      "description": "DEX",
                      "name": "Uniswap",
                      "subtext": "Cool DEX",
                      "icon": "uniswap.icon",
                      "pointerUris": ["uniswap.api.eth"],
                      "locationUri": "ipfs://QmUvHu18pVVJu5WqWbB2YJxb7LkL4YeKpzwYhuetWqD3pj"
                    },
                    {
                      "id": "4",
                      "description": "DEX Aggregator",
                      "name": "Paraswap",
                      "subtext": "Cool aggregator",
                      "icon": "paraswap.icon",
                      "pointerUris": ["paraswap.api.eth"],
                      "locationUri": "ipfs://QmUvHu18pVVJu5WqWbB2YJxb7LkL4YeKpzwYhuetWqD3pj"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "/apis/find/{name}": {
    "get": {
      "summary": "Find a Web3API based on the name",
      "produces": ["application/json"],
      "parameters": [
        {
          "in": "path",
          "name": "name",
          "type": "string",
          "description": "The Web3API name pattern",
          "example": "uni",
          "required": true
        }
      ],
      "responses": {
        "200": {
          "description": "Web3API Metadata",
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "status": {
                    "type": "integer"
                  },
                  "apis": {
                    "type": "object",
                    "items": {
                      "$ref": "#/definitions/Api"
                    }
                  }
                },
                "example": {
                  "status": 200,
                  "apis": [
                    {
                      "id": "3",
                      "description": "DEX",
                      "name": "Uniswap",
                      "subtext": "Cool DEX",
                      "icon": "uniswap.icon",
                      "pointerUris": ["uniswap.api.eth"],
                      "locationUri": "ipfs://QmUvHu18pVVJu5WqWbB2YJxb7LkL4YeKpzwYhuetWqD3pj"
                    },
                    {
                      "id": "4",
                      "description": "DEX Aggregator",
                      "name": "Paraswap",
                      "subtext": "Cool aggregator",
                      "icon": "paraswap.icon",
                      "pointerUris": ["paraswap.api.eth"],
                      "locationUri": "ipfs://QmUvHu18pVVJu5WqWbB2YJxb7LkL4YeKpzwYhuetWqD3pj"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "/apis/find/{location}/{pointer}": {
    "get": {
      "summary": "Find a Web3API based on the ",
      "produces": ["application/json"],
      "parameters": [
        {
          "in": "path",
          "name": "location",
          "type": "string",
          "description": "The Web3API storage",
          "example": "ens",
          "required": true
        },
        {
          "in": "path",
          "name": "pointer",
          "type": "string",
          "description": "The Web3API pointer",
          "example": "uniswap.web3api.eth",
          "required": true
        }
      ],
      "responses": {
        "200": {
          "description": "Web3API Metadata",
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "status": {
                    "type": "integer"
                  },
                  "api": {
                    "type": "object",
                    "items": {
                      "$ref": "#/definitions/Api"
                    }
                  }
                },
                "example": {
                  "status": 200,
                  "api": {
                    "id": "3",
                    "description": "DEX",
                    "name": "Uniswap",
                    "subtext": "Cool DEX",
                    "icon": "uniswap.icon",
                    "pointerUris": ["uniswap.api.eth"],
                    "locationUri": "ipfs://QmUvHu18pVVJu5WqWbB2YJxb7LkL4YeKpzwYhuetWqD3pj"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "/apis/publish": {
    "post": {
      "summary": "Create new API",
      "description": "Store metadata",
      "parameters": [
        {
          "in": "header",
          "name": "Authorization",
          "type": "string",
          "description": "Github access token",
          "example": { "Authorization": "token gho_TOKEN" },
          "required": true
        },
        {
          "in": "header",
          "name": "withCredentials",
          "type": "boolean",
          "description": "Allows the UI to send cookies to the backend",
          "example": true,
          "required": true
        },
        {
          "in": "body",
          "description": "Web3API Metadata",
          "schema": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "subtext": {
                "type": "string"
              },
              "icon": {
                "type": "string"
              },
              "locationUri": {
                "type": "string"
              },
              "pointerUris": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "example": {
              "id": 1,
              "description": "Uniswap DEX",
              "name": "Uniswap",
              "subtext": "Cool DEX",
              "icon": "uniswap.png",
              "locationUri": "w3//ipfs//QMabc",
              "pointerUris": ["api.uniswap.eth"]
            }
          }
        }
      ],
      "produces": ["application/json"],
      "responses": {
        "200": {
          "description": "API was validated and created succesfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "integer"
                  },
                  "api": {
                    "$ref": "#/definitions/Api"
                  }
                },
                "example": {
                  "status": 200,
                  "api": {
                    "id": 1,
                    "description": "Uniswap DEX",
                    "name": "Uniswap",
                    "subtext": "Cool DEX",
                    "icon": "uniswap.png",
                    "locationUri": "w3//ipfs//QMabc",
                    "pointerUris": ["api.uniswap.eth"]
                  }
                }
              }
            }
          }
        },
        "406": {
          "description": "Pointer or location are incorrect",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "integer"
                  },
                  "error": {
                    "type": "string"
                  }
                },
                "example": {
                  "status": 406,
                  "error": "Pointer: uniswap.web3api.eth is not registered"
                }
              }
            }
          }
        },
        "400": {
          "description": "Request body is wrong",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "integer"
                  },
                  "message": {
                    "type": "string"
                  }
                },
                "example": {
                  "status": 400,
                  "message": "Error(s) on body: \"subtext\" is required"
                }
              }
            }
          }
        },
        "404": {
          "description": "Authentication failed",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "integer"
                  },
                  "message": {
                    "type": "string"
                  }
                },
                "example": {
                  "status": 404,
                  "message": "Authentication with GitHub is required"
                }
              }
            }
          }
        },
        "500": {
          "description": "Unexpected error on API",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "integer"
                  },
                  "error": {
                    "type": "string"
                  }
                },
                "example": {
                  "status": 500,
                  "error": ""
                }
              }
            }
          }
        }
      }
    }
  }
}
